<%- include('partials/auth/header.ejs'); %>
    <div class="container">
        <div class="auth-wrapper">
            <div class="row">
                <div class="col-lg-6 text-center">
                    <img src="images/Group 1.png" alt="login background image" width="80%">
                </div>
                <div class="col-lg-6">
                    <div class="form-wrapper">
                        <header class="text-center">
                            <img src="images/Logo-02 1.png" alt="">
                            <h3 class="my-3 mb-3">Hello! Welcome Back.</h3>
                            <a href="#" class="btn btn-outline-secondary">
                                Continue as Guest
                            </a>
                            <p class="text-center">Or</p>
                        </header>
                        <div class="section">
                            <form action="#" method="post" class="mb-3" id="login-form">
                                <div class="mb-2">
                                    <label for="username">Username</label>
                                    <input type="email" id="email" name="email" class="form-control"
                                        placeholder="Enter your email address" required>
                                </div>
                                <div class="mb-2">
                                    <label for="password">Password</label>
                                    <input type="password" id="password" name="password" class="form-control"
                                        placeholder="Enter your password" required>
                                </div>

                                <div class="clearfix mb-2">
                                    <div class="float-end">
                                        <a href="#" class="btn btn-link">Forgot your password?</a>
                                    </div>
                                </div>

                                <div class="mb-2">
                                    <button type="button" class="btn btn-primary w-100" id="btn-customer-login">
                                        Sign In
                                    </button>
                                </div>
                            </form>
                            <p>Don't have an account? <a href="/customers/register">Sign Up</a></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
<%- include('partials/auth/footer.ejs'); %>
