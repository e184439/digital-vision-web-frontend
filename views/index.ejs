<%- include('partials/header.ejs'); %>

<%- include('partials/navbar.ejs'); %>

<div class="container mt-3">
    <div class="row">
        <div class="col-lg-3"></div>
        <div class="col-lg-7">
            <select name="sort_by" id="sort_by" class="form-select w-25 float-start me-3">
                <option value="">Sort by: Featured</option>
            </select>
            <select name="category" id="category" class="form-select w-25 float-start"></select>
        </div>

        <div class="col-lg-2 text-end">
            <button type="button" class="btn btn-outline position-relative">
                <i class="fa fa-heart"></i>
                <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger wishlist-count-display">
                    0
                </span>
            </button>
            <button type="button" class="btn btn-outline position-relative me-3">
                <i class="fa fa-cart-shopping"></i>
                <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger cart-count-display">
                    0
                </span>
            </button>
        </div>
    </div>
    <div class="row mt-3">
        <div class="col-lg-3">
            <div class="block">
                <h6>Customer Reviews</h6>

                <div class="side-filter-stars mb-3">
                    <div class="rating">
                        <a class="rating-filter rating-4up" href="">
                            <i class="fa-solid fa-star"></i>
                            <i class="fa-solid fa-star"></i>
                            <i class="fa-solid fa-star"></i>
                            <i class="fa-solid fa-star"></i>
                            <i class="fa-regular fa-star"></i> & up
                        </a>
                    </div>
                    <div class="rating">
                        <a class="rating-filter rating-3up" href="">
                            <i class="fa-solid fa-star"></i>
                            <i class="fa-solid fa-star"></i>
                            <i class="fa-solid fa-star"></i>
                            <i class="fa-regular fa-star"></i>
                            <i class="fa-regular fa-star"></i> & up
                        </a>
                    </div>
                    <div class="rating">
                        <a class="rating-filter rating-2up" href="">
                            <i class="fa-solid fa-star"></i>
                            <i class="fa-solid fa-star"></i>
                            <i class="fa-regular fa-star"></i>
                            <i class="fa-regular fa-star"></i>
                            <i class="fa-regular fa-star"></i> & up
                        </a>
                    </div>
                    <div class="rating">
                        <a class="rating-filter rating-1up" href="">
                            <i class="fa-solid fa-star"></i>
                            <i class="fa-regular fa-star"></i>
                            <i class="fa-regular fa-star"></i>
                            <i class="fa-regular fa-star"></i>
                            <i class="fa-regular fa-star"></i> & up
                        </a>
                    </div>
                </div>
            </div>

            <div class="block mb-3">
                <h6>Price</h6>

                <div class="row">
                    <div class="col">
                        <input type="number" id="filter_price_min" class="form-control w-100 p-3" min="0" step="1"
                               placeholder="Min" value="0"/>
                    </div>
                    <div class="col">
                        <input type="number" id="filter_price_max" class="form-control w-100 p-3" min="0" step="1"
                               placeholder="Max" value="0"/>
                    </div>
                </div>
            </div>

            <div class="block mb-3">
                <input type="text" class="form-control" id="filter-search-field" name="search" placeholder="Search">
            </div>

            <div class="block mb-3">
                <h6>Brands</h6>

                <div class="side-filter-brands" id="brands-sidebar">
                    <!-- brand list checkboxes will be listed here -->
                </div>
            </div>
            <div class="block mb-3">
                <button class="btn btn-secondary w-100" id="filter_items">
                    Filter
                </button>
            </div>
        </div>
        <div class="col-lg-9">
            <div class="row product-grid">
                <!-- products will be displayed here -->
            </div>
        </div>
    </div>
</div>

<%- include('partials/footer.ejs'); %> 