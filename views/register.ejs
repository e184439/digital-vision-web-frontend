<%- include('partials/auth/header.ejs'); %>
<div class="container">
    <div class="auth-wrapper">
        <div class="row">
            <div class="col-lg-6 text-center">
                <img src="images/Group 1.png" alt="login background image" width="80%">
            </div>
            <div class="col-lg-6">
                <div class="form-wrapper">
                    <header class="text-center">
                        <img src="images/Logo-02 1.png" alt="">
                        <h3 class="my-3 mb-3">Hello! Welcome.</h3>
                        <a href="#" class="btn btn-outline-secondary">
                            Already have an account? Log In.
                        </a>
                        <p class="text-center">Or</p>
                    </header>
                    <div class="section">
                        <form action="#" method="post" class="mb-3" id="login-form">
                            <div class="mb-2">
                                <label for="firstname">First name</label>
                                <input type="email" id="firstname" name="firstname" class="form-control"
                                       placeholder="Enter your firstname">
                            </div>
                            <div class="mb-2">
                                <label for="lastname">Last name</label>
                                <input type="email" id="lastname" name="lastname" class="form-control"
                                       placeholder="Enter your email address">
                            </div>
                            <div class="mb-2">
                                <label for="username">Email Address</label>
                                <input type="email" id="username" name="username" class="form-control"
                                       placeholder="Enter your email address">
                            </div>
                            <div class="mb-2">
                                <label for="password">Password</label>
                                <input type="password" id="password" name="password" class="form-control"
                                       placeholder="Enter your password">
                            </div>

                            <div class="mb-2">
                                <button type="submit" class="btn btn-primary w-100">
                                    Sign In
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<%- include('partials/auth/footer.ejs'); %>
